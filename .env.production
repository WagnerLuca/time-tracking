# Production Environment Variables
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_USER=timetrack_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=timetracking_db

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# Image Tags (set by CI/CD or manually)
BACKEND_IMAGE=ghcr.io/wagnerluca/time-tracking-backend:latest
FRONTEND_IMAGE=ghcr.io/wagnerluca/time-tracking-frontend:latest

# API Configuration
API_BASE_URL=http://backend:7000

# Optional: Custom domains (for reverse proxy)
# BACKEND_DOMAIN=api.timetracking.yourdomain.com
# FRONTEND_DOMAIN=timetracking.yourdomain.com